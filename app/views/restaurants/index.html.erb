<a href="/restaurants">Restaurants</a>
<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <h3><%= restaurant.name %></h3>
  <h4>Created At: <%= restaurant.created_at %></h4>
  <h5>Cooks: <%= restaurant.cook_count %></h5>
  <h5><%= link_to "Edit #{restaurant.name}", "/restaurants/#{restaurant.id}/edit" %></h5>
  <h5><%= link_to "Delete #{restaurant.name}", "/restaurants/#{restaurant.id}", method: :delete %></h5>
  <% end %>
<a href="/restaurants/new">New Restaurant</a>
<p><%= link_to "Sort by Number of Cooks", :sort => "cook_count" %></p>